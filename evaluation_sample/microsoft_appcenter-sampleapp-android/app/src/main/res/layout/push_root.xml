<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPushBackground">

    <ImageView
        android:id="@+id/pushImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:background="@color/colorPushImageBackground"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/push" />

    <TextView
        android:id="@+id/pushTextView"
        android:layout_width="300dp"
        android:layout_height="145dp"
        android:layout_below="@+id/pushImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:clickable="false"
        android:contextClickable="false"
        android:cursorVisible="false"
        android:defaultFocusHighlightEnabled="false"
        android:fadeScrollbars="false"
        android:text="@string/push_description"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/white"
        android:textSize="17sp" />

</RelativeLayout>